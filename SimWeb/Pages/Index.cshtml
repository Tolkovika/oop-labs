@page
@model IndexModel
@{
    ViewData["Title"] = "Simulation";
}

<div class="text-center">
    <h1 class="display-4">SimWeb Simulator</h1>
    <p>Visualize the simulation state in your browser.</p>
</div>

@if (Model.Simulation == null)
{
    <div class="simulation-container">
        <div class="text-center">
            <h3>Wybierz symulację:</h3>
            <div class="mt-4">
                <form method="post" asp-page-handler="Sim1" style="display: inline;">
                    <button class="btn btn-primary btn-lg mx-2" style="min-width: 200px;">
                        🗡️ Sim1<br/>
                        <small>Creatures (Orc & Elf)</small><br/>
                        <small>Mapa 5x5</small>
                    </button>
                </form>
                <form method="post" asp-page-handler="Sim2" style="display: inline;">
                    <button class="btn btn-success btn-lg mx-2" style="min-width: 200px;">
                        🦅 Sim2<br/>
                        <small>Animals & Creatures</small><br/>
                        <small>Torus 8x6</small>
                    </button>
                </form>
                <form method="post" asp-page-handler="Sim3" style="display: inline;">
                    <button class="btn btn-info btn-lg mx-2" style="min-width: 200px;">
                        📜 Sim3<br/>
                        <small>Historia (tury 5,10,15,20)</small><br/>
                        <small>Torus 8x6</small>
                    </button>
                </form>
            </div>
        </div>
    </div>
}
else if (Model.CurrentSimType == 3 && Model.SimulationLog != null)
{
    @* Sim3 - History view *@
    var turnLog = Model.SimulationLog.TurnLogs[Model.CurrentHistoryTurn];
    
    <div class="simulation-container">
        <div class="turn-info">
            <span><strong>Sim3 - Historia symulacji</strong></span><br/>
            <span>Tura: <strong>@Model.CurrentHistoryTurn</strong></span><br/>
            <span>Obiekt: <strong>@turnLog.Mappable</strong></span><br/>
            <span>Ruch: <strong>@turnLog.Move</strong></span>
        </div>

        <div class="map-grid" style="grid-template-columns: repeat(@Model.SimulationLog.SizeX, 50px);">
            @for (int y = 0; y < Model.SimulationLog.SizeY; y++)
            {
                @for (int x = 0; x < Model.SimulationLog.SizeX; x++)
                {
                    <div class="map-cell">
                        @{
                            var emoji = Model.GetHistorySymbolAt(Model.CurrentHistoryTurn, x, y);
                            if (!string.IsNullOrEmpty(emoji))
                            {
                                <span style="font-size: 28px;">@emoji</span>
                            }
                        }
                    </div>
                }
            }
        </div>

        <div class="controls mt-3">
            <span class="me-2">Wybierz turę:</span>
            @foreach (var turn in Model.HistoryTurns)
            {
                <form method="post" asp-page-handler="HistoryTurn" style="display: inline;">
                    <input type="hidden" name="turn" value="@turn" />
                    <button class="btn @(Model.CurrentHistoryTurn == turn ? "btn-primary" : "btn-outline-primary") mx-1">
                        @turn
                    </button>
                </form>
            }
        </div>

        <div class="controls mt-3">
            <form method="post" asp-page-handler="Sim1" style="display: inline;">
                <button class="btn btn-outline-primary mx-1">Sim1</button>
            </form>
            <form method="post" asp-page-handler="Sim2" style="display: inline;">
                <button class="btn btn-outline-success mx-1">Sim2</button>
            </form>
            <form method="post" asp-page-handler="Sim3" style="display: inline;">
                <button class="btn btn-info mx-1">Sim3</button>
            </form>
        </div>
    </div>
}
else
{
    @* Sim1 or Sim2 - regular live simulation *@
    <div class="simulation-container">
        <div class="turn-info">
            <span><strong>Symulacja @Model.CurrentSimType</strong></span><br/>
            @if (Model.Simulation.Finished)
            {
                <span class="text-danger">Simulation Finished!</span>
            }
            else
            {
                <span>Current Move: <strong>@Model.CurrentMove</strong></span> <br/>
                <span>Next Creature: <strong>@Model.CurrentMappable</strong></span>
            }
        </div>

        <div class="map-grid" style="grid-template-columns: repeat(@Model.Simulation.Map.SizeX, 50px);">
            @for (int y = 0; y < Model.Simulation.Map.SizeY; y++)
            {
                @for (int x = 0; x < Model.Simulation.Map.SizeX; x++)
                {
                    <div class="map-cell">
                        @{
                            var mappables = Model.Simulation.Map.At(x, y);
                            if (mappables.Count == 1)
                            {
                                <span style="font-size: 28px;">@Model.GetEmojiForMappable(mappables[0])</span>
                            }
                            else if (mappables.Count > 1)
                            {
                                 <span style="font-weight:bold; color:red; font-size: 28px;">❌</span>
                            }
                        }
                    </div>
                }
            }
        </div>

        <div class="controls mt-3">
            <form method="post" asp-page-handler="Next" style="display: inline;">
                <button class="btn-nav" @(Model.Simulation.Finished ? "disabled" : "")>
                    Next Turn ➡️
                </button>
            </form>
            <form method="post" asp-page-handler="Reset" style="display: inline;">
                <button class="btn btn-warning mx-2">🔄 Reset</button>
            </form>
            <form method="post" asp-page-handler="Sim1" style="display: inline;">
                <button class="btn btn-outline-primary mx-1">Sim1</button>
            </form>
            <form method="post" asp-page-handler="Sim2" style="display: inline;">
                <button class="btn btn-outline-success mx-1">Sim2</button>
            </form>
            <form method="post" asp-page-handler="Sim3" style="display: inline;">
                <button class="btn btn-outline-info mx-1">Sim3</button>
            </form>
        </div>
    </div>
}
